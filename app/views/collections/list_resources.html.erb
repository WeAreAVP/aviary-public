<div id="main_container" class="container-fluid">
  <div class="main_contain">
    <main>
      <div class="heading-holder table-head mb-2 text-headline jumbotron">
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-7"><h1> <%= @collection.title %> </h1></div>
            <div class="col-md-5">
              <%= render partial: 'collection_resources/show/collection_resource_buttons', locals: {from: 'list_resources'} %>
              <a class="btn btn-primary float-right" href="<%= new_collection_collection_resource_path(@collection) %>">Add
                Resource</a>
            </div>
          </div>
        </div>
      </div>
      <div class="data-table">
        <div class="container">
          <%= content_tag :table, role: :datatable, class: ['table', 'table-striped'], id: 'collection_resource_datatable', data: { url: list_resources_collection_path(@collection, format: :json) } do %>
            <%= render partial: 'collection_resources/listing_table', locals: {table_called_from: 'list_resource', columns_details: JSON.parse(current_organization.resource_table_column_detail), organization_id: current_organization.id } %>
          <% end %>
        </div>
      </div>
    </main>
  </div>
</div>
<%= render partial: 'collections/bulk_edit_popups' %>
<%= render partial: 'collection_resources/manage_column', locals: { columns_details: JSON.parse(@collection.organization.resource_table_column_detail), search_columns_details: JSON.parse(@collection.organization.resource_table_search_columns), organization_id: @collection.organization_id } %>
<script type="text/javascript">
    var collection_resource_table = new CollectionResourceTable();
    $(function () {
        collection_resource_table.initialize('<%== @collection.organization.resource_table_column_detail %>', '<%= session[:resource_list_bulk_edit] %>');
    });
</script>
