<%= simple_form_for @collection, :url => @collection.new_record? ? collections_path : collection_path, html: { novalidate: true } do |c| %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group banner-image">
        <div class="field-title">
          <label for="">Collection Banner</label>
        </div>
        <div class="image-box">
          <div class="holder">
            <img id="banner" src="<%= @collection.new_record? ? '#' : (image_url @collection.image) %>" alt="">
          </div>
        </div>
        <div class="file-upload">
          <%= c.label @collection.new_record? ? 'Add Image' : 'Upload new image', for: 'collection_image' %>
          <%= c.input :image, as: :file, error: false, label: false, input_html: { onchange: "readURL(this, 'banner');", accept: 'image/*' } %>
        </div>
        <%= c.error :image %>
        <br>
      </div>
    </div>
      <div class="col-md-6">
        <div class="form-group favicon-image">
          <div class="field-title">
            <label for="">Collection Favicon</label>
          </div>
          <div class="image-box">
            <div class="holder">
              <img id="favicon" src="<%= @collection.new_record? ? '#' : (image_url @collection.favicon) %>" alt="">
            </div>
          </div>
          <div class="file-upload">
            <%= c.label @collection.new_record? ? 'Add Favicon' : 'Upload new favicon', for: 'collection_favicon' %>
            <%= c.input :favicon, as: :file, error: false, label: false, input_html: { onchange: "readURL(this, 'favicon');", accept: 'image/*' } %>
          </div>
          <%= c.error :image %>
          <br>
        </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <div class="field-title">
          <label for="collection_title">Collection Name
            <i class="fa fa-question-circle" data-toggle="tooltip" data-placement="top" data-html="true" title="What is your collection's name?"></i>
          </label>
        </div>
        <%= c.input :title, label: false, input_html: { class: 'form-control collection-title-field' } %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <div class="field-title">
          <label for="collection_about">About Your Collection
            <i class="fa fa-question-circle" data-toggle="tooltip" data-placement="top" data-html="true" title="Tell users about your collection. This will appear in &quot;About this Collection&quot; on your collection page."></i>
          </label>
        </div>
        <%= c.input :about, label: false, input_html: { class: 'form-control' } %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <div class="field-title">
          <%= c.label 'Public ?', for: 'collection_public' %>
        </div>
        <%= c.select :is_public, [['Yes', true], ['No', false]], { prompt: 'Receive emails' }, required: true, label: false, class: 'custom-placeholder' %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group">
        <div class="field-title">
          <%= c.label 'Featured ?', for: 'collection_featured' %>
        </div>
        <%= c.select :is_featured, [['Yes', true], ['No', false]], { prompt: 'Receive emails' }, required: true, label: false, class: 'custom-placeholder' %>
      </div>
    </div>
  </div>

  <% if  @collection.new_record? %>
    <div class="row pb-3 mt-3">
      <div class="col-md-12">
        <div class="form-group">
          <div class="field-title">
            <input type='checkbox' class="boolean optional d-inline-block mr-1" name='is_cloning_collection' id='collection_is_cloning_collection' />
            <label for="collection_public" class="string optional d-inline-block">Clone from existing collection?</label>
            <small class="form-text"> By enabling this option, you can select an existing collection of yours that will be used to pre-configure the metadata fields and access policies for this new collection. Select a collection below to proceed. </small>
          </div>
          <div id='collection_dd_custom' class="d-none mb-5 pb-5">
            <%= select_tag('clone_collection', options_from_collection_for_select(current_organization.collections, 'id', 'title'), prompt: "Select a Collection.",) %>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12 text-right">
        <%= c.submit 'Save', class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
<% end %>
<br>
<script type="text/javascript">
    var collection = new Collection();
    document.addEventListener("DOMContentLoaded", function (event) {
        collection.initialize();
    });
</script>
