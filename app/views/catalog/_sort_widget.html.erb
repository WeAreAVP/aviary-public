<% if defined? show_sort_and_per_page && show_sort_and_per_page? and active_sort_fields.many? %>
  <div id="sort-dropdown" class="" >
    <button type="button" class="btn btn-sm btn-default dropdown-toggle" data-toggle="dropdown">
      <%= t('blacklight.search.sort.label', :field => sort_field_label(current_sort_field.key)) %>

    </button>
    <style>
        .dropdown-menu {
            top: 0px !important;
        }
    </style>
    <ul class="dropdown-menu" role="menu" style="">
      <%- active_sort_fields.each do |sort_key, _field_config| %>
        <li><%= link_to(sort_field_label(sort_key), url_for(search_state.params_for_search(sort: sort_key)),class: 'btn btn-link') %></li>
      <%- end -%>
    </ul>
  </div>
<% end %>
