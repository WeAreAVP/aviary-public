<li class="nav-item <%= 'd-none' if tab_width == 100 %>" style="width:<%= tab_width %>%">

  <a class="nav-link <%= active_tab %>" id="<%= type %>-tab" data-tab="<%= type %>" data-toggle="tab" href="#<%= type %>" role="tab" aria-controls="<%= type %>"><span class="icon-<%= type.capitalize %>"></span>
    <% if (type == 'index') || (type == 'transcript') %>
      <div class="loader-small d-inline-block float-left tab_loader_<%= type %> <%= type != 'index' ? 'd-done' : '' %>">
        <div class="img">
          <div class="hold">
            <%= image_tag("https://#{ENV['S3_HOST_CDN']}/public/images/ajax-loader.gif") %>
          </div>
        </div>
      </div>
    <% end %>
    <strong><%= type.capitalize %></strong>
    <span class="badge badge-pill badge-danger d-none <%= type %>_count_tab" >&nbsp;</span>
  </a>
</li>