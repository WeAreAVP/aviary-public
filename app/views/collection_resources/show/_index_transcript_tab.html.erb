<li class="nav-item" style="width:<%= tab_width %>%">

  <a class="nav-link" id="<%= type %>-tab" data-tab="<%= type %>" data-toggle="tab" href="#<%= type %>" role="tab" aria-controls="<%= type %>"><span class="icon-<%= type.capitalize %>"></span>
    <% if (@file_indexes.count > 0 && type == 'index') || (@file_transcripts.count > 0 && type == 'transcript') %>
      <div class="loader-small d-inline-block float-left tab_loader_<%= type %> <%= type != 'index' ? 'd-done' : '' %>">
        <div class="img">
          <div class="hold">
            <%= image_tag("https://#{ENV['S3_HOST_CDN']}/public/images/ajax-loader.gif") %>
          </div>
        </div>
      </div>
    <% end %>
    <strong><%= type.capitalize %></strong>
    <span class="badge badge-pill badge-danger d-none <%= type %>_count_tab" >&nbsp;</span>
  </a>
</li>