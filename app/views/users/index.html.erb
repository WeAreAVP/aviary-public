<div id="main_container" class="container-fluid">
  <div class="main_contain">
    <main>
      <div class="text-headline jumbotron">
        <div class="heading-holder table-head">
          <div class="row">
            <div class="col-md-6"><h1>Users</h1></div>
            <div class="col-md-6 text-right">
              <% if current_user.current_org_owner_admin(current_organization) %>
                <button type="button" class="btn btn-outline-primary mr-2" data-toggle="modal" id="add_member_btn_cus_im" data-target="#invitesModal">Pending
                  Invites
                </button>
                <button type="button" class="btn btn-primary" data-backdrop="static" data-toggle="modal" id="add_member_btn_cus" data-target="#AddTeamMemberModal">Add
                  Team Member
                </button>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="data-table user-datatable">
        <div class="hold">
          <%= content_tag :table, role: :datatable, class: ["table", "table-striped",'table-bordered'], id: 'listUserDatatable', data: { url: users_path(format: :json) } do %>
            <thead>
            <tr>
              <th>Email</th>
              <th>Name</th>
              <th>Role</th>
              <th>Status</th>
              <th>Action</th>
            </tr>
            </thead>
            <tbody>
            </tbody>
          <% end %>
        </div>
      </div>
    </main>
  </div>
</div>
<%= render partial: 'users/manage_team', locals: { roles: @roles } %>
<%= render partial: 'users/member_invities', locals: { roles: @roles } %>

<div class="modal fade" id="access_management_modal" tabindex="-1" role="dialog" aria-labelledby="access_management_modalLabel" aria-hidden="true">
  <div class="modal-lg modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="h4" id="access_management_modalLabel">Access Management</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body body_access_management">

      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="messageModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-md modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Operation Message</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body messageModalBodyCus">

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger " id="class_message" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<%= render partial: "shared/remove_user_popup" %>
<script type="text/javascript">
    var app_helper = new App();
    userObj = new User(app_helper);
    $(function () {
        userObj.initialize()
    });
</script>
<style>
    .editing-details .selectize-input {
        width: 180px;
    }
</style>