  <%= select_tag(:sort, options_for_select(sort_fields, h(current_sort_field && current_sort_field.key)), :class => "form-control sort-select") %>
  <%= hidden_field_tag(:search_field, blacklight_config.advanced_search[:url_key]) %>
</div>

