<a target="_blank" href="<%= contact_us_url(subdomain: false) %>" class="btn btn-primary" id="accessibility_button" role="button" aria-label="Contact us about accessibility issues">
    <div class="row">
        <img src="<%= image_path 'icons/web_accessibility_icon.png' %>" alt="Accessibility icon">
        <span class="my-auto">
                <p>
                    Are there accessibility issues with this page?
                    <br>
                    Please click here to let us know and we will address them.
                </p>
            </span>
    </div>
</a>
<script type="text/javascript">
    var accessibility = new Accessibility();
    document.addEventListener("DOMContentLoaded", function (_event) {
        accessibility.initialize();
    });
</script>
