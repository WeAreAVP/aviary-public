<%= render template: 'home/index' %>
<div class="modal fade" id="access_denied_popup" tabindex="-1" role="dialog" aria-labelledby="access_denied_popup" aria-hidden="true">
  <div class="modal-md modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title h4">Access Denied</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="font-weight-bold mb-20px">We are sorry! You don't have access to this content. Please contact your organization administrator for more
        details.
        </div>
        <% unless user_signed_in? %>
        <div>
          <%= form_for resource, as: resource_name, url: session_path(resource_name), validate: true do |f| %>
            <%= f.email_field :email, autofocus: true, required: true, class: 'form-control mb-10px', placeholder: 'Email Address' %>

            <%= f.password_field :password, autocomplete: 'off', class: 'form-control', placeholder: 'Password' %>

            <div class="row mt-10px">
              <div class="col-md-12">
                <a href="#" data-toggle="modal" data-target="#forgot_password_modal" data-dismiss="modal" class="forgot ml-3">Forgot
                  Password</a>
              </div>
            </div>
            <div class="row mt-10px">
              <div class="col-md-12">
                <%= f.submit 'Sign in', class: 'btn btn-lg btn-primary btn-block checking' %>
              </div>
            </div>

          <% end %>
          <div class="mt-10px">Don't have an account?
            <a href="javascript://" class="sign_up_link">Join now!</a>
          </div>
        </div>
          <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
    $('#access_denied_popup').modal({
        backdrop: 'static'
    });
</script>