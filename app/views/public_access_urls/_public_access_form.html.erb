<div class="public_access">

  <input type='hidden' data-resoruceid=<%= collection_resource.id %> data-url='<%= encrypted_info_url %>' id='url_encryption' class='form-control'/>

  <% if @public_access_url.present? %>
    <input type='hidden' id="public_access_url_id" value="<%= @public_access_url.id %>"/>
  <% end %>

  <% if type == 'ever_green_url' || type == 'both' %>
    <div class="evergreen_url public_access_tab mb-2">
      <h1 class="h4">Evergreen URL</h1>
      <div class="col-12 d-inline-block p-0">
        <div class="col-9 p-0 d-inline-block">
          <% url_present = collection_resource.public_access_urls.present? && collection_resource.public_access_urls.ever_green_url.present? %>
          <textarea readonly class="form-control mb-1 share_value float-left " id="ever_green_url" rows="4" placeholder="Evergreen Access URL"><%= url_present ? URI.unescape(collection_resource.public_access_urls.ever_green_url.first.url) : '' %></textarea>
        </div>
        <div class="col-2 float-right p-0 ml-2 ">
          <a class="btn btn-sm btn-custom-small_all generate-link-green-url  float-right col-12 mb-1 mt-1" data-type="ever_green_url">
            <i class="fa fa-link" aria-hidden="true"></i>
            <%= url_present.present? || @public_access_url.present? ? 'Regenerate' : 'Generate' %>
          </a>
          <% unless @public_access_url.present? %>
            <button class="btn btn-dark copy-link col-12" data-clipboard-action="copy" data-clipboard-target="#ever_green_url" data-original-title="" title="">
              <i class="fa fa-files-o" aria-hidden="true"></i>
              Copy
            </button>
          <% end %>
        </div>
      </div>
    </div>
    <hr/>
  <% end %>

  <% if type == 'limited_access_url' || type == 'both' %>
    <div class="limited_access_url public_access_tab mb-3">
      <h1 class="h4"> Limited Access URL </h1>
      <div class="col-12 d-inline-block p-0">
        <div class="col-9 p-0 d-inline-block">
          <textarea readonly class="form-control mb-3 share_value float-left " id="public_access_url" rows="4" placeholder="Public Limited Access URL"><%== @public_access_url.present? && @public_access_url.url.present? ? URI.unescape(@public_access_url.url) : '' %></textarea>
        </div>
        <div class="col-2 float-right p-0 ml-2 mt-2">
          <a class="btn btn-sm btn-custom-small_all generate-link  float-right col-12 mb-1 mt-1" data-type="limited_access_url">
            <i class="fa fa-link" aria-hidden="true"></i>
            <% if @public_access_url.present? %>
              <%= 'Update' %>
            <% else %>
              <%= 'Generate' %>
            <% end %>
          </a>
          <% unless @public_access_url.present? %>
            <button class="btn btn-dark copy-link col-12" data-clipboard-action="copy" data-clipboard-target="#public_access_url" data-original-title="" title="">
              <i class="fa fa-files-o" aria-hidden="true"></i>
              Copy
            </button>
          <% end %>
        </div>
      </div>
      <label class='label font-weight-bold mb-1usel-wrap .mediacarousel").jCarouse'> Access Duration:</label>
      <input type='text' data-url='<%= encrypted_info_url %>' data-resoruceid=<%= collection_resource.id %> id='public_access_time_period' name='public_access_time_period' class='form-control' data-setvalue="<%= @public_access_url.present? && @public_access_url.present? ? @public_access_url.duration : '' %>"/>
    </div>
  <% end %>

  <% if type == 'limited_access_url' %>
    <div class="mt-5 p-0 pt-5">
      <%= render 'collection_resources/show/share_media_time' %>
    </div>
  <% end %>
</div>