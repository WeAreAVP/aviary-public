  .introductory-price {
    -webkit-transform: rotate(40deg);
    -ms-transform: rotate(40deg);
    -moz-transform: rotate(40deg);
    position: relative;
    background: yellow;
    z-index: 9999999;
    text-align: center;
    width: 40%;
    color: #2d2d2d;
    z-index: 0;
    padding: 10px;
    font-size: 13px;
    right: -215px;
    margin-left: auto;
    top: 45px;
    position: absolute;
    box-shadow: 0 7px 10px rgba(5, 5, 5, 0.1);

    .h3 {
      font-weight: bold;
      font-size: 16px;
      margin: 0 auto;
    }

    div {
      width: 200px;
      margin: 0 auto;

      @media screen and (max-width: 992px) {
        width: auto;
      }
    }

    @media screen and (max-width: 1500px) {
      right: -190px;
      top: 50px;
    }
    @media screen and (max-width: 1430px) {
      right: -160px;
    }
    @media screen and (max-width: 1350px) {
      right: -160px;
    }
    @media screen and (max-width: 1250px) {
      right: -130px;
      top: 55px;
    }
    @media screen and (max-width: 1130px) {
      right: -100px;
      top: 45px;
    }
    @media screen and (max-width: 992px) {
      right: 0;
      left: 0;
      top: 0;
      width: inherit;
      position: relative;
      transform: none;
      margin-bottom: 10px;
    }

  }

  .head {
    background: #003853;
    padding: 50px 20px 95px;
    color: #f3f3f3;
    font-size: 17px;
    line-height: 1.4;
    position: relative;
    font-weight: 100;
    text-align: center;

    h1 {
      font-size: 40px;
      text-align: center;
      color: #fff;
      position: relative;
      font-family: 'Gilroy-Bold', sans-serif;
      padding-bottom: 15px;
      margin-bottom: 15px;

      &:after {
        content: "";
        position: absolute;
        left: 50%;
        bottom: 0;
        width: 30px;
        height: 5px;
        margin-left: -15px;
        background: #fff;
        border-radius: 30px;
      }
    }

    p {
      max-width: 600px;
      margin: 0 auto 25px;
    }

    .btn {
      padding: 15px 20px;
      background: transparent;
      color: #fff !important;
      font-size: 16px;
      border: 1px solid !important;
    }

    @media screen and (max-width: 992px) {
      padding: 80px 20px 95px;
    }
  }

  .holder {
    margin-top: -60px;
    text-align: left;
    display: flex;

    @media screen and (max-width: 1250px) {
      display: block;
    }
  }

  .plan-toggle {
    margin-top: 30px;
  }

  .toggle, .toggler {
    display: inline-block;
    vertical-align: middle;
    margin: 5px;
  }

  .toggler {
    color: #fff;
    transition: .2s;
    font-weight: bold;
    font-size: 14px;
  }

  .toggle {
    position: relative;
    width: 60px;
    height: 35px;
    border-radius: 100px;
    background-color: #001823;
    overflow: hidden;
    box-shadow: inset 0 0 2px 1px rgba(0, 0, 0, 0.05);
  }

  .check {
    position: absolute;
    display: block;
    cursor: pointer;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    z-index: 6;
  }

  .check:checked ~ .switch {
    right: 2px;
    left: 46.5%;
    transition: 0.25s cubic-bezier(0.785, 0.135, 0.15, 0.86);
    transition-property: left, right;
    transition-delay: .08s, 0s;
  }

  .switch {
    position: absolute;
    left: 2px;
    top: 2px;
    bottom: 2px;
    right: 46.5%;
    background-color: #fff;
    border-radius: 36px;
    z-index: 1;
    transition: 0.25s cubic-bezier(0.785, 0.135, 0.15, 0.86);
    transition-property: left, right;
    transition-delay: 0s, .08s;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
  }
}

